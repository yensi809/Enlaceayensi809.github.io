script.js

document.addEventListener('DOMContentLoaded', () => {

    // --- BASE DE DATOS DE TUTORIALES ---
    const tutorialesOffice = {
        excel: [
            {
                id: 'excel-1',
                titulo: 'Cómo usar la función SUMA',
                pasos: [
                    'Haz clic en la celda donde quieres que aparezca el resultado.',
                    'Escribe =SUMA(' para iniciar la fórmula.',
                    'Selecciona con el ratón el rango de celdas que quieres sumar (ej: A1:A5).',
                    'Cierra el paréntesis ) y presiona Enter.'
                ],
                videoId: 'cTnYAClP3WU' // ID del video de YouTube
            },
            {
                id: 'excel-2',
                titulo: 'Crear una tabla dinámica',
                pasos: [
                    'Asegúrate de que tus datos tienen encabezados.',
                    'Selecciona toda tu tabla de datos.',
                    'Ve a la pestaña "Insertar" y haz clic en "Tabla Dinámica".',
                    'En el nuevo panel, arrastra los campos a las áreas de Filtros, Columnas, Filas y Valores.'
                ],
                videoId: '0P5wjVJ8xEs'
            },
            {
                id: 'excel-3',
                titulo: 'Usar BUSCARV (VLOOKUP)',
                pasos: [
                    'Haz clic en la celda donde quieres el resultado.',
                    'Escribe =BUSCARV(.',
                    'Introduce el valor que buscas (ej: una celda con un ID).',
                    'Introduce el rango de la tabla donde buscar (la primera columna debe tener los valores de búsqueda).',
                    'Introduce el número de columna de la que quieres obtener el dato.',
                    'Escribe FALSO para una búsqueda exacta y cierra el paréntesis.'
                ],
                videoId: '9xwWdM-3pYQ'
            }
        ],
        word: [
            {
                id: 'word-1',
                titulo: 'Crear y formatear tablas',
                pasos: [
                    'Ve a la pestaña "Insertar".',
                    'Haz clic en "Tabla" y selecciona el número de filas y columnas con el ratón.',
                    'Para dar formato, usa la pestaña "Diseño de tabla" que aparece al seleccionar la tabla.',
                    'Puedes cambiar colores, bordes y aplicar estilos predefinidos.'
                ],
                videoId: 'L2c8d8p2p3A'
            },
            {
                id: 'word-2',
                titulo: 'Combinar correspondencia',
                pasos: [
                    'Ve a la pestaña "Correspondencia".',
                    'Haz clic en "Iniciar combinación de correspondencia" y selecciona "Cartas".',
                    'Haz clic en "Seleccionar destinatarios" para usar una lista existente (un archivo de Excel).',
                    'Usa "Insertar campo de combinación" para añadir datos del archivo a tu documento.',
                    'Finaliza con "Finalizar y combinar" para crear las cartas personalizadas.'
                ],
                videoId: 'H3_t5c_3s2M'
            }
        ],
        powerpoint: [
            {
                id: 'ppt-1',
                titulo: 'Añadir transiciones y animaciones',
                pasos: [
                    'Selecciona la diapositiva a la que quieres añadir una transición.',
                    'Ve a la pestaña "Transiciones" y elige una de la galería.',
                    'Para animar un objeto (texto, imagen), selecciónalo.',
                    'Ve a la pestaña "Animaciones" y elige un efecto (Entrada, Énfasis, Salida).'
                ],
                videoId: 'qR3iV2f0o9I'
            },
            {
                id: 'ppt-2',
                titulo: 'Usar la Diapositiva Maestra',
                pasos: [
                    'Ve a la pestaña "Vista" y haz clic en "Diapositiva Maestra".',
                    'Modifica la diapositiva maestra principal para cambiar fuentes, colores o el logo en todas las diapositivas.',
                    'Crea nuevos diseños personalizados para diferentes tipos de contenido.',
                    'Cierra la vista de maestra para aplicar los cambios a tu presentación.'
                ],
                videoId: 'YkM2X5n5o9E'
            }
        ]
    };

    // --- REFERENCIAS A ELEMENTOS DEL DOM ---
    const tabs = document.querySelectorAll('.tab');
    const listaTutorialesEl = document.getElementById('lista-tutoriales');
    const detalleTutorialEl = document.getElementById('detalle-tutorial');

    let programaActual = 'excel';

    // --- FUNCIONES DE RENDERIZADO ---
    function renderizarLista(programa) {
        listaTutorialesEl.innerHTML = ''; // Limpiar lista anterior
        const tutoriales = tutorialesOffice[programa];

        tutoriales.forEach(tutorial => {
            const itemEl = document.createElement('div');
            itemEl.classList.add('tutorial-item');
            itemEl.innerHTML = `<h3>${tutorial.titulo}</h3>`;
            itemEl.addEventListener('click', () => mostrarDetalle(tutorial.id));
            listaTutorialesEl.appendChild(itemEl);
        });
    }

    function mostrarDetalle(tutorialId) {
        let tutorialEncontrado = null;
        for (const programa in tutorialesOffice) {
            tutorialEncontrado = tutorialesOffice[programa].find(t => t.id === tutorialId);
            if (tutorialEncontrado) break;
        }

        if (!tutorialEncontrado) return;

        let pasosHTML = tutorialEncontrado.pasos.map(paso => `<li>${paso}</li>`).join('');

        detalleTutorialEl.innerHTML = `
            <h2>${tutorialEncontrado.titulo}</h2>
            <h3>Pasos a seguir:</h3>
            <ol class="pasos-lista">
                ${pasosHTML}
            </ol>
            <h3>Video Explicativo:</h3>
            <div class="video-container">
                <iframe src="https://www.youtube.com/embed/${tutorialEncontrado.videoId}" 
                        title="YouTube video player" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen>
                </iframe>
            </div>
        `;
    }

    // --- EVENT LISTENERS ---
    tabs.forEach(tab => {
        tab.addEventListener('click', () => {
            // Quitar clase active de todas las pestañas
            tabs.forEach(t => t.classList.remove('active'));
            // Añadir clase active a la pestaña clicada
            tab.classList.add('active');

            programaActual = tab.dataset.programa;
            renderizarLista(programaActual);
            // Mostrar el primer tutorial de la nueva lista por defecto
            const primerTutorial = tutorialesOffice[programaActual][0];
            if (primerTutorial) {
                mostrarDetalle(primerTutorial.id);
            }
        });
    });

    // --- CARGA INICIAL ---
    renderizarLista(programaActual);
    mostrarDetalle(tutorialesOffice[programaActual][0].id);

});
